{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Schema for cns.eth",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/parentSchema"
    },
    {
      "type": "object",
      "required": ["projectRoot"],
      "properties": {
        "domainHierarchy": {
          "type": "object",
          "properties": {
            "level": {
              "type": "integer",
              "const": 1
            },
            "domain": {
              "type": "string",
              "const": "cns.eth"
            },
            "parent": {
              "type": ["string", "null"]
            },
            "children": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "traits": {
          "type": "object",
          "properties": {
            "inheritedFrom": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "levelSpecific": {
              "type": "object"
            },
            "overrides": {
              "type": "object"
            }
          }
        },
        "deduplication": {
          "type": "object",
          "properties": {
            "inheritedFields": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "overriddenFields": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "mergedFields": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "parentSchema": {
      "type": "object",
      "properties": {}
    },
    "levelSpecific": {
      "type": "object",
      "properties": {
        "projectRoot": {
          "type": "string",
          "pattern": "^cns.eth$"
        },
        "projectTraits": {
          "type": "object",
          "properties": {
            "inheritedFrom": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "projectSpecific": {
              "type": "object"
            },
            "overrides": {
              "type": "object"
            }
          }
        }
      }
    }
  }
}
